<?xml version="1.0" encoding="utf-8"?>
<SpiderEngine xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <Title>抓取58微站商家网站信息</Title>
  <Description></Description>

  <InputList>

    <Input xsi:type="HttpInput">
      <Encoding>utf-8</Encoding>
      <ContentType>text/html; charset=utf-8</ContentType>
      <Method>GET</Method>
      <Sleep>0</Sleep>
      <CookieClean>30</CookieClean>
      <Referer></Referer>
      <Accept>text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8</Accept>
      <UserAgent>Mozilla/5.0 (Windows NT 6.3; WOW64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/35.0.1916.153 Safari/537.36</UserAgent>
      <UrlEnumerator>
        <UrlFormat></UrlFormat>
        <EnumeratorRuleList>
          <EnumeratorRule xsi:type="FileLineEnumeratorRule">
            <FileName>装修建材_weizhan_58_com.txt</FileName>
          </EnumeratorRule>
        </EnumeratorRuleList>
      </UrlEnumerator>
    </Input>

  </InputList>

  <FieldList>

    <Field>
      <Title>公司信息</Title>
      <DataName>info</DataName>
      <Require>true</Require>
      <Rule>

        <Rule xsi:type="SubStringRule">
          <Begin>商家名称：</Begin>
          <End>&lt;/ul&gt;</End>
        </Rule>

        <Rule xsi:type="TrimRule" />

        <Rule xsi:type="ReplaceRule">
          <Origin>nbsp;</Origin>
          <Target> </Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>&lt;span class="company-contact-name"&gt;</Origin>
          <Target></Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>&lt;/span&gt;</Origin>
          <Target></Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>&lt;/li&gt;</Origin>
          <Target></Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>&lt;li&gt;</Origin>
          <Target></Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>&lt;span&gt;</Origin>
          <Target></Target>
        </Rule>


        <Rule xsi:type="ReplaceRule">
          <Origin>&lt;span class="iconSp bbonline ml10" onclick="showMessageWindow();" style="cursor: pointer;" name="zaixian_44695019" zx="1"&gt;</Origin>
          <Target>|</Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>&lt;span class="company-contact-telphone2"&gt;</Origin>
          <Target>|</Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>&lt;span class="company-contact-address"&gt;</Origin>
          <Target></Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>&lt;span class="company-contact-telphone"&gt;</Origin>
          <Target></Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>服务区域：</Origin>
          <Target>|服务区域：</Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>联系地址：</Origin>
          <Target>|联系地址：</Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>&amp;</Origin>
          <Target></Target>
        </Rule>

        <Rule xsi:type="ReplaceRule">
          <Origin>联系人：</Origin>
          <Target>|联系人：</Target>
        </Rule>


      </Rule>
    </Field>

  </FieldList>

  <OutputList>
    <Output xsi:type="CsvOutput">
      <Path>tel_weizhan_58_com.csv</Path>
    </Output>
  </OutputList>

</SpiderEngine>